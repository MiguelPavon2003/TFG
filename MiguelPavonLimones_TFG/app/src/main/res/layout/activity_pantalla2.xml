<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDropdownEquipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Equipo ⌄"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@android:color/black"
            app:iconGravity="textEnd"
            app:iconPadding="4dp"
            app:iconTint="@android:color/black"
            android:gravity="start" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDropdownUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuario ⌄"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@android:color/black"
            app:iconGravity="textEnd"
            app:iconPadding="4dp"
            app:iconTint="@android:color/black"
            android:gravity="end" />
    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnRegistrarEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar equipo"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/btnCrearPartido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnCrearPartido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear partido"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/btnRegistrarEquipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
