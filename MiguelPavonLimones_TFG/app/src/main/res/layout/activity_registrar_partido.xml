<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/azul_claro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Partido"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha del partido"
            android:focusable="false"
            android:padding="12dp"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etRival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Equipo rival"
            android:padding="12dp"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/spinnerTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/radioGroupLocalVisitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local" />

            <RadioButton
                android:id="@+id/radioVisitante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitante"
                android:layout_marginStart="32dp"/>
        </RadioGroup>

        <EditText
            android:id="@+id/etJornada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jornada (solo liga)"
            android:padding="12dp"
            android:backgroundTint="#CCCCCC"
            android:layout_marginBottom="16dp"
            android:inputType="number"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnGuardarPartido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar partido"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/blue"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
